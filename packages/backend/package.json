{
  "name": "@bot/backend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "rimraf dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/main.js",
    "dev": "tsx watch src/main.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "cross-env DOTENV_CONFIG_PATH=../../.env.test node -r dotenv/config ../../node_modules/.bin/vitest run",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "knex migrate:latest",
    "db:make-migration": "knex migrate:make",
    "faq:validate": "tsx src/faq/validate.ts"
  },
  "dependencies": {
    "@app/shared": "file:../shared",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/static": "^8.2.0",
    "@fastify/swagger": "^9.1.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@supabase/supabase-js": "^2.45.4",
    "dotenv-safe": "^9.1.0",
    "fastify": "^5.5.0",
    "fastify-plugin": "^4.5.1",
    "fuse.js": "^7.0.0",
    "gray-matter": "^4.0.3",
    "ioredis": "^5.7.0",
    "knex": "^3.1.0",
    "lru-cache": "^11.1.0",
    "minisearch": "^6.3.0",
    "openai": "^4.52.7",
    "pg": "^8.12.0",
    "pino": "^9.3.2",
    "prom-client": "^15.1.3",
    "telegraf": "^4.16.3",
    "yaml": "^2.5.0",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.3.0"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.5.1",
    "@types/node": "^20.14.12",
    "@types/pg": "^8.11.6",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.57.0",
    "pino-pretty": "^11.2.1",
    "rimraf": "^5.0.9",
    "testcontainers": "^11.5.1",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitest": "^1.6.1"
  }
}
