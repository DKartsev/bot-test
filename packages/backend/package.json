{
  "name": "@bot/backend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "rimraf dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/main.js",
    "dev": "tsx watch src/main.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "cross-env DOTENV_CONFIG_PATH=../../.env.test node -r dotenv/config ../../node_modules/.bin/vitest run",
    "db:migrate": "knex migrate:latest",
    "db:make-migration": "knex migrate:make",
    "faq:validate": "tsx src/faq/validate.ts"
  },
  "dependencies": {
    "@app/shared": "file:../shared",
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "dotenv-safe": "^9.1.0",
    "fastify": "^5.5.0",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^2.0.0",
    "fuse.js": "^7.0.0",
    "gray-matter": "^4.0.3",
    "hnswlib-node": "^3.0.0",
    "ioredis": "^5.7.0",
    "jsdom": "^24.1.1",
    "knex": "^3.1.0",
    "lru-cache": "^11.1.0",
    "minisearch": "^6.3.0",
    "openai": "^4.52.7",
    "pdf-parse": "^1.1.1",
    "pg": "^8.12.0",
    "pino": "^9.3.2",
    "prom-client": "^15.1.3",
    "telegraf": "^4.16.3",
    "turndown": "^7.2.0",
    "yaml": "^2.5.0",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.3.0"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.5.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.14.12",
    "@types/pdf-parse": "^1.1.4",
    "@types/pg": "^8.11.6",
    "@types/turndown": "^5.0.4",
    "eslint": "^8.57.0",
    "pino-pretty": "^11.2.1",
    "rimraf": "^5.0.9",
    "testcontainers": "^11.5.1",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.10.0",
    "vitest": "^1.6.1"
  }
}
