{
  "name": "my-support-bot",
  "version": "1.0.0",
  "main": "src/api/index.js",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "start": "node src/api/server.js",
    "start:prod": "NODE_ENV=production node src/api/server.js",
    "dev": "node src/api/server.js",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "coverage": "cross-env NODE_ENV=test jest --coverage",
    "load:ask": "node test/load/autocannon.ask.js",
    "docker:build": "docker build -t my-support-bot:latest .",
    "docker:run": "docker run --rm -p 3000:3000 --env-file .env -v $PWD/data:/app/data -v $PWD/logs:/app/logs -v $PWD/feedback:/app/feedback my-support-bot:latest",
    "metrics:print": "curl -s localhost:${PORT:-3000}${PROM_METRICS_PATH:-/metrics/prom}"
  },
  "dependencies": {
    "accept-language-parser": "^1.5.0",
    "airtable": "^0.12.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "cors": "^2.8.5",
    "diff": "^5.2.0",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "ejs": "^3.1.9",
    "express-rate-limit": "^7.0.0",
    "fast-deep-equal": "^3.1.3",
    "fuse.js": "^6.6.2",
    "googleapis": "^136.0.0",
    "helmet": "^7.0.0",
    "ipaddr.js": "^2.1.0",
    "mustache": "^4.2.0",
    "node-cron": "^3.0.3",
    "openai": "^5.12.2",
    "pino": "^9.8.0",
    "uuid": "^9.0.1",
    "rotating-file-stream": "^3.0.3",
    "prom-client": "^15.1.1",
    "pino-loki": "^2.1.0",
    "pino-elasticsearch": "^8.1.0",
    "exceljs": "^4.3.0"
  },
  "devDependencies": {
    "autocannon": "^7.12.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mock-fs": "^5.2.0",
    "supertest": "^6.3.3"
  }
}
