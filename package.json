{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20 <23",
    "npm": ">=10 <12"
  },
  "scripts": {
    "build": "npm run build -w packages/backend && npm run build -w packages/admin",
    "lint": "npm run lint -w packages/backend && npm run lint -w packages/admin",
    "test": "npm run test -w packages/backend",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": "prettier --write"
  }
}
