{
  "name": "bot-test",
  "version": "1.0.0",
  "description": "Support bot with operator admin panel",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w packages/backend && npm run build -w packages/operator-admin",
    "dev": "npm run dev -w packages/backend",
    "test": "npm run test -w packages/backend",
    "test:coverage": "npm run test:coverage -w packages/backend",
    "lint": "npm run lint -w packages/backend",
    "lint:fix": "npm run lint:fix -w packages/backend",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "packages/backend/src/**/*.{ts,tsx}": [
      "npm run lint -w packages/backend",
      "npm run test:coverage -w packages/backend"
    ]
  }
}
