{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20 <23",
    "npm": ">=10 <12"
  },
  "scripts": {
    "build": "npm run build -w packages/backend && npm run build -w packages/admin",
    "lint": "npm run lint -w packages/backend && npm run lint -w packages/admin",
    "test": "npm run test -w packages/backend",
    "prepare": "node -e \"try{require('husky').install()}catch(e){process.exit(0)}\"",
    "preinstall": "git config --local core.hooksPath .husky || true"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "prettier": "^3.6.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "vitest": "^1.6.0",
    "dotenv": "^16.4.5",
    "cross-env": "^7.0.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
